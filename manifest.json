{
  "manifest_version": 3,
    "name": "Qur’an Quotes – Daily Ayahs, Islamic Inspiration & Reminders",
  "version": "1.1.0",
  "description": "Receive daily Qur’an ayahs, Islamic quotes, faith reminders, and motivational Islamic content. Save your favorite Ayahs and improve your iman with guided daily inspiration.",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "notifications", "alarms"],
  "icons": {
    "16": "icon/icon48.png",
    "48": "icon/icon48.png",
    "128": "icon/icon48.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["quotes.json"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "keywords": [
    "Quran",
    "Islamic Quotes",
    "Daily Ayahs",
    "Islamic Inspiration",
    "Faith Reminder",
    "Islam",
    "Hadith",
    "Muslim",
    "Dua"
  ]
}
