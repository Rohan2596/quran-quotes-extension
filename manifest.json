{
  "manifest_version": 3,
  "name": "Qur’an Quotes – Daily Ayahs & Islamic Inspiration",
  "version": "1.0",
  "description": "Daily Qur’an ayahs for inspiration and faith. Receive Islamic reminders and save your favorite Qur’an quotes.",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "notifications", "alarms"],
  "icons": {
    "16": "icon/icon48.png",
    "48": "icon/icon48.png",
    "128": "icon/icon48.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["quotes.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
